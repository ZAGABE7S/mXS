#!/bin/sh

# Set these paths appropriately

BIN="/Users/damien/Applications/TreeTagger/bin"
CMD="/Users/damien/Applications/TreeTagger/cmd"
LIB="/Users/damien/Applications/TreeTagger/lib"

OPTIONS="-token -lemma -sgml -no-unknown -eos-tag <sent/>"

TOKENIZER=${CMD}/utf8-tokenize.perl
TAGGER=${BIN}/tree-tagger
ABBR_LIST=${LIB}/french-abbreviations
PARFILE=${LIB}/french.par

$TOKENIZER -f -a $ABBR_LIST $* |
$TAGGER $OPTIONS $PARFILE
